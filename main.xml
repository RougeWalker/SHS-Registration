<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<TextView
		android:textColor="#000000"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Academic Program"
		android:id="@+id/acad"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:padding="15dp"/>

	<Spinner
		android:id="@+id/program_spinner"
		android:layout_width="wrap_content"
		android:layout_toRightOf="@+id/acad"
		android:layout_height="wrap_content"
		android:padding="15dp"/>

	<TextView
		android:textColor="#000000"
		android:id="@+id/last"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/acad"
		android:text="Last Name"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:paddingLeft="12dp"/>

	<EditText
		android:id="@+id/lastbox"
		android:layout_below="@+id/last"
		android:layout_width="match_parent"
		android:inputType="textPersonName"
		android:layout_height="wrap_content"
		android:hint=" Last Name"
		android:ems="10"
		android:paddingTop="11dp"/>

	<TextView
		android:textColor="#000000"
		android:id="@+id/first"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/lastbox"
		android:text="First Name"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:paddingLeft="12dp"/>

	<EditText
		android:id="@+id/firstbox"
		android:layout_below="@+id/first"
		android:layout_width="match_parent"
		android:inputType="textPersonName"
		android:layout_height="wrap_content"
		android:hint=" First Name"
		android:ems="10"
		android:paddingTop="11dp"/>

	<TextView
		android:textColor="#000000"
		android:id="@+id/gender"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/firstbox"
		android:text="Gender"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:paddingLeft="12dp"/>


     <RadioGroup
		
		 android:id="@+id/genderadio"
		
		 android:layout_below="@+id/gender"
		
		 android:textColor="#000000"
		
		 android:paddingLeft="12dp"
		
		 android:orientation="horizontal">
		

		 
		<RadioButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:hint="Male"/>

		<RadioButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="12dp"
			android:hint="Female"/>
	</RadioGroup>

	<TextView
		android:textColor="#000000"
		android:id="@+id/req"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	 	android:layout_below="@+id/genderadio"
		android:text="Requirements"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:paddingLeft="12dp"/>

	<CheckBox
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/req"
		android:hint="Original Report Card (Form 138)"
		android:paddingLeft="10dp"
		android:id="@+id/mainCheckBox1"/>

	<CheckBox
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/mainCheckBox1"
		android:hint="NSO Copy of Birth Certificate"
		android:paddingLeft="10dp"
		android:id="@+id/mainCheckBox2"/>

	<CheckBox
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/mainCheckBox2"
		android:hint="Certificate of Good Character"
		android:paddingLeft="10dp"
		android:id="@+id/mainCheckBox3"/>

	<CheckBox
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/mainCheckBox3"
		android:hint="Certification of Junior High School Completion"
		android:paddingLeft="10dp"
		android:id="@+id/mainCheckBox4"/>

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Submit"
		android:layout_below="@id/mainCheckBox4"
		android:layout_centerHorizontal="true"/>

</RelativeLayout>
